<UserControl x:Class="UserControlPattern.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="parent"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel DataContext="{Binding ElementName=parent}" Orientation="Horizontal">
        <Label Content="{Binding Path=Label}" Width="100"/>
        <TextBox Width="100" Text="{Binding Path=Value}"/>
    </StackPanel>
</UserControl>
